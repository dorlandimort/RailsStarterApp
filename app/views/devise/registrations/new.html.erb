<div class="page-content">
  <div class="content-wrapper">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="panel panel-body login-form">
          <div class="text-center">
            <div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
            <h5 class="content-group"><%= t('auth.create_account') %> <small class="display-block"><%= t('auth.fields_required') %></small></h5>
          </div>

          <div class="content-divider text-muted form-group"><span><%= t('auth.credentials') %></span></div>

          <div class="form-group has-feedback has-feedback-left">
            <input type="text" class="form-control" placeholder="<%= t('auth.username') %>">
            <div class="form-control-feedback">
              <i class="icon-user-check text-muted"></i>
            </div>
          </div>
          <div class="form-group has-feedback has-feedback-left">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('auth.email') %>
            <div class="form-control-feedback">
              <i class="icon-mention text-muted"></i>
            </div>
          </div>
          <div class="form-group has-feedback has-feedback-left">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('auth.password') %>
            <div class="form-control-feedback">
              <i class="icon-user-lock text-muted"></i>
            </div>
          </div>
          <div class="form-group has-feedback has-feedback-left">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('auth.password_repeat') %>
            <div class="form-control-feedback">
              <i class="icon-user-lock text-muted"></i>
            </div>
          </div>
          <button type="submit" class="btn bg-pink-400 btn-block btn-lg"><%= t('auth.register') %> <i class="icon-circle-right2 position-right"></i></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
