<div class="page-content">
  <div class="content-wrapper">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="panel panel-body login-form">
          <div class="text-center">
            <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
            <h5 class="content-group"><%= t('login.labels.login_message') %> <small class="display-block"><%= t('login.labels.credentials') %></small></h5>
          </div>
          <div class="form-group has-feedback has-feedback-left">
            <%= f.email_field :email, autofocus: true, placeholder: t('login.fields.email'), class: 'form-control' %>
            <div class="form-control-feedback">
              <i class="icon-user text-muted"></i>
            </div>
          </div>
          <div class="form-group has-feedback has-feedback-left">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('login.fields.password') %>
            <div class="form-control-feedback">
              <i class="icon-lock2 text-muted"></i>
            </div>
          </div>
          <div class="form-group login-options">
            <div class="row">
              <% if devise_mapping.rememberable? -%>
                <div class="col-sm-6">
                  <label class="checkbox-inline">
                    <%= f.check_box :remember_me, class: 'styled' %>
                    <%= t('login.labels.remember') %>
                  </label>
                </div>
              <% end -%>
              <% if devise_mapping.recoverable? -%>
                <div class="col-sm-6 text-right">
                  <a href="#"><%= t('login.labels.forgot_password') %></a>
                </div>
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn bg-pink-400 btn-block"><%= t('login.labels.login') %> <i class="icon-arrow-right14 position-right"></i></button>
          </div>
          <div class="content-divider text-muted form-group"><span><%= t('login.labels.other_options') %></span></div>
          <ul class="list-inline form-group list-inline-condensed text-center">
            <li><a href="#" class="btn border-indigo text-indigo btn-flat btn-icon btn-rounded"><i class="icon-facebook"></i></a></li>
            <li><a href="#" class="btn border-slate-600 text-slate-600 btn-flat btn-icon btn-rounded"><i class="icon-google-plus"></i></a></li>
            <li><a href="#" class="btn border-info text-info btn-flat btn-icon btn-rounded"><i class="icon-twitter"></i></a></li>
          </ul>
          <div class="content-divider text-muted form-group"><span><%= t('login.labels.no_account') %></span></div>
          <a href="<%= new_user_registration_path %>" class="btn btn-default btn-block content-group"><%= t('login.labels.signup') %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>
